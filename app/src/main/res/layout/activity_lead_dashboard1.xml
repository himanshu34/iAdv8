<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.agl.product.adw8_new.activity.LeadDashboardActivity1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <LinearLayout
                android:id="@+id/lldefaultSpends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leads Dashboard"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textSelectedDateRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jun 2 - Jun 8,2017"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/editIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_edit" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <com.agl.product.adw8_new.custom_view.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/tab_unselected_color" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvHeaderData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_unselected_color"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/tab_unselected_color" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvGraph"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:scrollbars="none"
                android:visibility="gone"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/llDataContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingRight="@dimen/_12sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            fontPath="fonts/Roboto-Black.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lead Source"
                            android:textColor="#7a7a7a"
                            android:textSize="@dimen/_16sdp"
                            tools:ignore="MissingPrefix" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/viewAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/colorPrimary"
                            android:text="VIEW ALL" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/spinner"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="#f7f7f7"
                            android:gravity="center"
                            android:minHeight="50dp"
                            android:padding="5dp"
                            android:text="Source"
                            android:textColor="@color/black" />

                        <HorizontalScrollView
                            android:id="@+id/hrone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="#f7f7f7"
                                    android:gravity="center"
                                    android:minHeight="50dp"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text="Closed Lost"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="#f7f7f7"
                                    android:gravity="center"
                                    android:minHeight="50dp"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text="Closed Won"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="#f7f7f7"
                                    android:gravity="center"
                                    android:minHeight="50dp"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text="Proposal Sent"

                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="#f7f7f7"
                                    android:gravity="center"
                                    android:minHeight="50dp"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text="Rejected"
                                    android:textColor="@color/black" />
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TableLayout
                            android:id="@+id/tlName"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content">

                        </TableLayout>

                        <HorizontalScrollView
                            android:id="@+id/hrsecond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scrollbars="none">

                            <TableLayout
                                android:id="@+id/tlValues"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"></TableLayout>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textTotal"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="#f7f7f7"
                            android:gravity="center"
                            android:minHeight="50dp"
                            android:padding="5dp"
                            android:text="Total"
                            android:textColor="@color/black" />

                        <HorizontalScrollView
                            android:id="@+id/hrbottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textClosedLost"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="#f7f7f7"
                                    android:gravity="center"
                                    android:minHeight="50dp"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/textCloseWon"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="#f7f7f7"
                                    android:gravity="center"
                                    android:minHeight="50dp"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/textProposalSent"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="#f7f7f7"
                                    android:gravity="center"
                                    android:minHeight="50dp"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/textReject"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="#f7f7f7"
                                    android:gravity="center"
                                    android:minHeight="50dp"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/black" />
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_4sdp"
                card_view:cardCornerRadius="@dimen/_4sdp"
                card_view:cardElevation="@dimen/_2sdp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        fontPath="fonts/Roboto-Black.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingRight="@dimen/_12sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text="Additional Details"
                        android:textColor="#7a7a7a"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/border" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvAdditionalDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                         />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </com.agl.product.adw8_new.custom_view.MyNestedScrollView>

</android.support.design.widget.CoordinatorLayout>

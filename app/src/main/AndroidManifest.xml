<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agl.product.adw8_new">

    <application
        android:name=".ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Login" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_campaign"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.DataActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CampaignActivity"
            android:label="@string/title_activity_campaign"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LeadDashBoardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LeadListDashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.KeywordsActivity"
            android:label="@string/title_activity_keywords"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AdsActivity"
            android:label="@string/title_activity_ads"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AdgroupActivity"
            android:label="@string/title_activity_adgroup"
            android:theme="@style/AppTheme.NoActionBar"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>